{
  "printWidth": 88,
  "tabWidth": 4,
  "useTabs": false,
  "singleQuote": false,
  "trailingComma": "es5",
  "semi": true,
  "proseWrap": "preserve",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": ["*.md"],
      "options": { "proseWrap": "always" }
    },
    {
      "files": ["*.json", "*.tpl", "*.toml", "*.yml", "*.yaml"],
      "options": { "tabWidth": 2 }
    }
  ]
}
